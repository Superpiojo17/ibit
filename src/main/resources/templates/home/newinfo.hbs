		<!-- Main -->
			<section id="main" class="wrapper">
				<div class="container">

					<header class="major special">
						<h2>Reset Account Information</h2>
						<p>Enter your password</p>
						
					<div align="center">	
					<form action="/rateandreview/newinfo" method="POST" >
						<div class="container 75%">
								
								<div class="6u$ 12u$(xsmall)">
									<input name="email" placeholder="Email" type="email" />
								</div>
								<br>
								<div class="6u$ 12u$(xsmall)">
									<input name="temp_password" placeholder="Temporary Password" type="password" />
								</div>
								<br>
								<div class="6u$ 12u$(xsmall)">
									<input name="new_password" placeholder="New Password" type="password" />
								</div>
								<br>
								<div class="6u$ 12u$(xsmall)">
									<input name="verify_password" placeholder="Verify Password" type="password" />
								</div>
								<br>
								
						<ul class="actions">
							<li><input type="submit" class="special" value="Submit" /></li>
							<li><input type="reset" class="alt" value="Reset" /></li>
						</ul>
					</form>
					</div>
					</header>

				
				</div>
			</section>

