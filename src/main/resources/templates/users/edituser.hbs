						<p style='color: red'>{{error}}</p>
					</div>
							<!-- Form -->
						<section>
							<form action="/user/{{user_form.id}}/edit" method="POST">
								<div class="row uniform 50%">
									<div class="6u 12u$(xsmall)">
										<input type="text" name="first_name" id="first_name" value="{{user_form.first_name}}" placeholder="First Name" />
										&ensp;
										<input type="text" name="email" id="email" value="{{user_form.email}}" placeholder="{{user_form.email}}" />
										&ensp;
										<div class="select-wrapper">
											<select name="role" id="role">
												<option value="{{user_form.role}}">{{user_form.role_string}}</option>
												<option value="1">Administrator</option>
												<option value="2">Faculty</option>
												<option value="3">Tutor</option>
												<option value="4">Student</option>
											</select>
										</div>
									</div>
									
									
									<div class="6u$ 12u$(xsmall)">
										<input type="text" name="last_name" id="last_name" value="{{user_form.last_name}}" placeholder="Last Name" />
										 &ensp;
										<input type="text" name="major" id="major" value="{{user_form.major}}" placeholder="Major" />
										&ensp;
										{{#if role_flag}}
										<div class="select-wrapper">
											<select name="year" id="year">
											<option value="{{user_form.school_year}}">{{user_form.year_string}}</option>
												<option value="1">Freshman</option>
												<option value="2">Sophomore</option>
												<option value="3">Junior</option>
												<option value="4">Senior</option>
											</select>
										</div>
									</div>
									{{/if}}
									 {{#unless role_flag}}<div class="select-wrapper">
											<select name="year" id="year">
												<option value="1">School year is N/A</option>
											</select>
										</div>
									</div>{{/unless}}
									
									
									&ensp;
									&ensp;
									&ensp;
									<div class="12u$">
										<ul class="actions">
											<button type="submit" class="btn btn-info"> Save 
											<span class="glyphicon glyphicon-floppy-saved"></button>
											&emsp;&emsp;
										</ul>
									</div>
								</div>
							</form>
						</section>
						
						
											<button type="submit" class="btn btn-danger" data-toggle="modal" data-target="#myModal" > Delete User
