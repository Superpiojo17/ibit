	<body>

		<!-- Header -->
			<header id="header">
				<h1>Student Dashboard</h1>
			</header>

			<!-- Nav -->
			<nav id="nav" class="visible">
				<ul class="links">
					<li><a href="/studentdashboard">Home</a></li>
